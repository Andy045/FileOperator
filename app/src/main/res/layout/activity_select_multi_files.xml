<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_8"
    android:paddingTop="@dimen/dp_3"
    android:paddingRight="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_curr_strategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="3dp"
        android:text="@string/str_ando_file_current_strategy"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/font_10"
        android:textStyle="bold" />

    <include layout="@layout/layout_select_file_strategy" />

    <Button
        android:id="@+id/bt_select_multi"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_2"
        android:text="@string/str_ando_file_select_multiple"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_11"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/str_ando_file_error_info"
        android:padding="3dp"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@color/color_font_black"
        android:textSize="@dimen/font_11"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/color_container_bg3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:overScrollMode="always"
        android:padding="5dp"
        android:scrollbars="vertical" />

</LinearLayout>